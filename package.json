{
  "private": true,
  "name": "runa-monorepo",
  "version": "0.0.7",
  "description": "Process manager for developement with a web interface.",
  "bin": "cli.js",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "test": "run-s test:*",
    "test:elm": "cd packages/runa; elm-app test",
    "test:jest": "cd packages/runa; jest",
    "precommit": "lint-staged",
    "prepush": "run-s test"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.4",
    "create-elm-app": "^1.10.0",
    "eslint": "^4.13.1",
    "eslint-config-concise": "^0.16.1",
    "eslint-config-concise-ava": "^0.23.0",
    "eslint-config-concise-browser": "^0.16.1",
    "eslint-config-concise-esnext": "^0.16.1",
    "eslint-config-concise-jest": "^0.16.1",
    "husky": "^0.14.3",
    "jest": "^22.0.2",
    "lerna": "^3.0.0-beta.18",
    "lint-staged": "^6.0.0",
    "npm-run-all": "^4.1.2",
    "preslint": "^0.23.1"
  },
  "ava": {
    "files": [
      "packages/runa-core/*.test.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "concise",
      "concise-esnext"
    ]
  },
  "lint-staged": {
    "*.js": [
      "preslint --fix --git"
    ]
  },
  "runa": {
    "tasks": {
      "elm": "elm-app start",
      "timer": "node scripts/timer.js"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
