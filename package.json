{
  "name": "runa",
  "version": "0.0.6",
  "description": "Process manager for developement with a web interface.",
  "bin": "cli.js",
  "scripts": {
    "prepare": "elm-package install",
    "prepublishOnly": "run-s build",
    "start": "./cli.js",
    "build": "elm-app build",
    "lint": "eslint --ext js,md .",
    "test": "run-s test:*",
    "test:elm": "elm-app test",
    "test:jest": "jest",
    "precommit": "lint-staged",
    "prepush": "run-s test"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "execa": "^0.8.0",
    "lodash": "^4.17.4",
    "opn": "^5.1.0",
    "pkg-conf": "^2.0.0",
    "restify": "^6.3.4",
    "split": "^1.0.1",
    "yargs": "^10.0.3",
    "z": "^1.0.3"
  },
  "devDependencies": {
    "create-elm-app": "^1.10.0",
    "eslint": "^4.13.1",
    "eslint-config-concise": "^0.16.0",
    "eslint-config-concise-browser": "^0.16.0",
    "eslint-config-concise-esnext": "^0.16.0",
    "eslint-config-concise-jest": "^0.16.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "npm-run-all": "^4.1.2",
    "prettier-eslint-cli": "^4.6.1"
  },
  "repository": "ratson/runa",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "*.md",
    "index.js",
    "cli.js",
    "server.js",
    "build"
  ],
  "keywords": [
    "process",
    "manager",
    "cli",
    "elm",
    "supervisor",
    "supervisord",
    "task",
    "runner",
    "spawn"
  ],
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "eslint --fix",
      "git add"
    ]
  },
  "runa": {
    "tasks": {
      "elm": "elm-app start",
      "timer": "node scripts/timer.js"
    }
  }
}
