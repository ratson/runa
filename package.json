{
  "private": true,
  "name": "runa-monorepo",
  "version": "0.0.7",
  "description": "Process manager for developement with a web interface.",
  "bin": "cli.js",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "test": "run-s test:*",
    "test:ava": "ava",
    "test:elm": "cd packages/runa-ui-elm; elm-app test",
    "precommit": "lint-staged",
    "prepush": "run-s test"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.4",
    "bluebird": "^3.5.1",
    "create-elm-app": "^1.10.4",
    "eslint": "^4.19.1",
    "eslint-config-concise": "^0.25.0",
    "eslint-config-concise-ava": "^0.23.0",
    "eslint-config-concise-browser": "^0.24.0",
    "eslint-config-concise-esnext": "^0.24.1",
    "fast-glob": "^2.2.2",
    "husky": "^0.14.3",
    "lerna": "^3.0.0-beta.18",
    "lint-staged": "^7.1.2",
    "npm-run-all": "^4.1.3",
    "preslint": "^0.25.0"
  },
  "ava": {
    "sources": [
      "**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "concise",
      "concise-esnext"
    ]
  },
  "lint-staged": {
    "*.js": [
      "preslint --fix --git"
    ]
  },
  "runa": {
    "tasks": {
      "elm": "elm-app start",
      "timer": "node scripts/timer.js"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
